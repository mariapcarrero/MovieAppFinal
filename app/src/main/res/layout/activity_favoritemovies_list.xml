<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.FavoriteMoviesListActivity"
        android:background="@color/colorBackGround">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/listMovies"
            android:clickable="true" android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="@string/volver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/volver"
            android:textColor="@color/colorText"
            android:onClick="goBackMoviesList"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            android:ems="10" app:layout_constraintHorizontal_bias="0.497" android:layout_marginRight="220dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/listMovies"
            android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>